# --- Cloudflare Worker Configuration ---

# Secret key to authenticate requests to the Cloudflare Worker.
SECRET_KEY=""

# Full URL of the Worker endpoint that receives the heartbeat.
# Example: https://<worker-name>.<account-name>.workers.dev/api/heartbeat
HEARTBEAT_URL=""


# --- n8n Local Webhook ---

# URL of the n8n webhook for external alerts.
N8N_WEBHOOK_URL=""


# --- Operational Configuration (Optional) ---

# Main execution loop interval in seconds (default: 10)
LOOP_INTERVAL_SECONDS=10

# Number of consecutive identical statuses to confirm a state change (default: 4)
STATUS_CHANGE_THRESHOLD=4

# Timeout for each service health check in seconds (default: 2)
SERVICE_TIMEOUT_SECONDS=2

# Target data points for dashboard charts resolution (default: 30)
TARGET_DATA_POINTS=30


# --- Service Health Checks ---

# Comma-separated list of service names.
SERVICE_NAMES=""

# URL for each service (SERVICE_URL_<name>). Supports http(s):// and docker:<container_name>.
# Example: SERVICE_URL_webapp="http://my-app.local"


# --- Infrastructure & Networking ---

# Optional: IP for direct DNS override in internal networks.
INTERNAL_DNS_OVERRIDE_IP=""

# Internal path for the SQLite database file.
SQLITE_DB_PATH="data/metrics.db"